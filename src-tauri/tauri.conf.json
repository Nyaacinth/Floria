{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Floria",
    "version": "../package.json",
    "identifier": "work.nyaacinth.app.floria",
    "build": {
        "frontendDist": "../build",
        "devUrl": "http://localhost:5173",
        "beforeDevCommand": "deno task dev --port=5173 --strictPort",
        "beforeBuildCommand": "deno task build"
    },
    "app": {
        "windows": [
            {
                "title": "Floria",
                "width": 800,
                "minWidth": 800,
                "height": 600,
                "minHeight": 600,
                "resizable": true,
                "fullscreen": false,
                "visible": false,
                "decorations": false,
                "shadow": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
    }
}
