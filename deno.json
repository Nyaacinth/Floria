{
    "version": "0.0.1",
    "nodeModulesDir": "auto",
    "tasks": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "prepare": "svelte-kit sync || echo ''",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "eslint . && prettier --check .",
        "format": "prettier --write .",
        "dev:tauri": "tauri dev",
        "build:tauri": "tauri build"
    },
    "fmt": {
        "exclude": ["**/*.*"]
    },
    "lint": {
        "exclude": ["**/*.*"]
    },
    "imports": {
        "@eslint/compat": "npm:@eslint/compat@^1.3.2",
        "@eslint/js": "npm:@eslint/js@^9.34.0",
        "@iconify-json/gravity-ui": "npm:@iconify-json/gravity-ui@^1.2.10",
        "@sveltejs/adapter-static": "npm:@sveltejs/adapter-static@^3.0.9",
        "@sveltejs/kit": "npm:@sveltejs/kit@^2.36.2",
        "@sveltejs/vite-plugin-svelte": "npm:@sveltejs/vite-plugin-svelte@^6.1.3",
        "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12",
        "@tauri-apps/api": "npm:@tauri-apps/api@^2.8.0",
        "@tauri-apps/cli": "npm:@tauri-apps/cli@^2.8.2",
        "@tauri-apps/plugin-os": "npm:@tauri-apps/plugin-os@^2.3.1",
        "dompurify": "npm:dompurify@^3.2.6",
        "eslint": "npm:eslint@^9.34.0",
        "eslint-config-prettier": "npm:eslint-config-prettier@^10.1.8",
        "eslint-plugin-svelte": "npm:eslint-plugin-svelte@^3.11.0",
        "globals": "npm:globals@^16.3.0",
        "inkjs": "npm:inkjs@^2.3.2",
        "jszip": "npm:jszip@^3.10.1",
        "prettier": "npm:prettier@^3.6.2",
        "prettier-plugin-svelte": "npm:prettier-plugin-svelte@^3.4.0",
        "prettier-plugin-tailwindcss": "npm:prettier-plugin-tailwindcss@^0.6.14",
        "svelte": "npm:svelte@^5.38.3",
        "svelte-check": "npm:svelte-check@^4.3.1",
        "tailwindcss": "npm:tailwindcss@^4.1.12",
        "typescript": "npm:typescript@^5.9.2",
        "typescript-eslint": "npm:typescript-eslint@^8.40.0",
        "unplugin-icons": "npm:unplugin-icons@^22.2.0",
        "vite": "npm:vite@^7.1.3"
    }
}
